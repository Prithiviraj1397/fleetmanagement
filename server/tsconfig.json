{
    "compilerOptions": {
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "target": "es6",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule":true,
      "sourceMap": true,
      "outDir": "build",
      "experimentalDecorators":true,
      "emitDecoratorMetadata":true
    },
    "lib": ["es2015"],
    "include": [   
      "**/*.ts",                        
      "envConfig/**/*.env"
    ],
    "files": [
      "ecosystem.config.js" 
    ],
    "exclude": ["node_modules"],
  }